@charset "utf-8";
body,html,div,p,b,i,img,input,button,a,select,option,form,table,tr,td,dd,dt,dl,span,ul,li,b{margin:0;padding:0;}
ul,li{list-style:none;}
body{font-family:"Microsoft YaHei",Verdana,Arial;font-size:12px;}
body,html{width:100%;}


.section{
	width:100%;
	float:left;
}
.section_container{
	width:92%;
	margin:0 auto;
}
.section_pink{
	height:60px;
	line-height:60px;
	font-size:30px;
	background-color:#EFEFEF;
}
.tables{
	margin-top:10px;
	border-top:1px solid #DDD
}
.btns{
	margin:10px 0;
}
.green_btn{
  height:35px;
  width:60px;
  color:#fff;
  background-color:#44c767;
  border:none;
  outline:none;
  -webkit-border-radius:5px;
  -moz-border-radius:5px;
  border-radius:5px;
  -moz-box-shadow: inset 0px 0px 0px 0px #ffffff;
  -webkit-box-shadow: inset 0px 0px 0px 0px #ffffff;
  box-shadow: inset 0px 0px 0px 0px #ffffff;
  font-size:14px;
  letter-spacing:2px;
  cursor:pointer;
}
.green_btn:hover{
  background-color:#5cbf2a;
}
.btns_right{
	float:right;
	margin-right:6px;
}
.add_new{
	width:110px;
}

.text_input{
	height:28px;
	outline:none;
	width:220px;
	padding-left:3px;
	color:#333;
	margin-right:3px;
}

.btns_right select{
	height:30px;
	margin-right:6px;
	min-width:120px;
	outline:none;
}

table{
	width:100%;
	border-collapse:collapse;
	table-layout:fixed;
}

table thead{
	background-color:#2DAFCA;
}
table thead th{
	height:40px;
	font-weight:normal;
	font-size:16px;
	color:#fff;
}
table thead th input{
	float:left;width:18px;height:18px;margin-left:6px;margin-top:3px;
}
table tbody tr{
	height:35px;
	line-height:35px;
	text-align:center;
}
table tbody td{
	overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap;
	word-wrap:break-word;
	border:1px solid #DDD;
	font-size:14px;
	text-align:center;
	color:#444;
}
table tbody tr td:last-child{
	color:#2DAFCA;
}
table tbody tr td:last-child a{
	color:#2DAFCA;
	cursor:pointer;
	text-decoration:none;
}
table tbody tr td:last-child a:hover{
	text-decoration:underline;
}
table tbody tr td input[type=checkbox]{
	float:left;width:15px;height:15px;margin-left:6px;
	margin-top:7px;
}
table tr th:nth-child(1),table tr td:nth-child(1){
	width:6%;
}
table tr th:nth-child(2),table tr td:nth-child(2){
	width:14%;
	
}
table tr th:nth-child(4),table tr td:nth-child(4){
	width:14%;
	
}
table tr th:nth-child(3),table tr td:nth-child(3){
	width:14%;
	
}
table tr th:nth-child(5),table tr td:nth-child(5){
	width:14%;
	
}
table tr th:nth-child(6),table tr td:nth-child(6){
	width:10%;
	
}
table tr th:nth-child(7),table tr td:nth-child(7){
	width:14%;
	
}
table tr th:nth-child(8),table tr td:nth-child(8){
	width:14%;	
}

