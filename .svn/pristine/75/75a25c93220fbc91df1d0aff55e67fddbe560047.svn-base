            {$pCitySelectJs}
            $('#click').click(function () {
                //$('form').submit();
                $('#submit').click();
            })
        });
    </script>
</block>

<block name="main">
    <div id="main">
        {:\\Onemla\\OnemlaHelper::W('Menu/Index')}
